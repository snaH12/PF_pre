<div class="container">
  <div class="row no-gutters">
    <div class="col-md-9 mx-sm-auto text-center shadow-lg">
        <h2>会員情報編集</h2>
        
        <%= form_with model: @user, url: user_path(current_user), method: :patch do |f| %>
         <%= render 'layouts/errors', obj: @user %>
        <table>
            <tr>
                <td>名前</td>
                <td>
                    <%= f.text_field :name %>
                </td>
            </tr>
            <tr>
                <td>出身県（任意）</td>
                <td>
                    <%= f.text_field :birthplace %>
                </td>
            </tr>
            <tr>
                <td>紹介文</td>
                <td>
                    <%= f.text_field :introduction %>
                </td>
            </tr>
            <tr>
              <td><%= f.submit "編集内容を保存", class: 'btn btn-success' %></td>
            </tr>
            </table>
        <% end %>
    </div>
  </div>
</div>

