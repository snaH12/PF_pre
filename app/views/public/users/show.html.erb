<div class="container">
  <div class="row no-gutters">
    <div class="col-md-10 mx-sm-auto text-center shadow-lg">
        <h2>マイページ</h2>
        <table class="table table-bordered border-primary">
            <tr>
                <td class="table-active">名前</td>
                <td>
                    <%= @user.name %>
                </td>
            </tr>
            <tr>
                <td class="table-active">出身県（任意）</td>
                <td>
                    <%= @user.birthplace %>
                </td>
            </tr>
            <tr>
                <td class="table-active">紹介文</td>
                <td>
                     <%= @user.introduction %>
                </td>
            </tr>
        </table>
        <div class="mt-10 offset-md-8">
            <%= link_to "編集する",  edit_user_path(@user), class: 'btn btn-success' %>
        </div>
    </div>
  </div>
</div>        

